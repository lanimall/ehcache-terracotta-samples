<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.github.lanimall.domain.BlogCommentEntity" table="blogComment" schema="" catalog="hibernatesample">
        <id name="blogCommentid">
            <column name="blogCommentid" sql-type="int" not-null="true"/>
        </id>
        <property name="author">
            <column name="author" sql-type="varchar"/>
        </property>
        <property name="comment">
            <column name="comment" sql-type="longtext" length="2147483647"/>
        </property>
        <property name="createdDateTime">
            <column name="createdDateTime" sql-type="datetime"/>
        </property>
        <property name="deleted">
            <column name="deleted" sql-type="tinyint"/>
        </property>
    </class>
</hibernate-mapping>